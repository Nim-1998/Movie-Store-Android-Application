<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviestore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieStore">
        <activity
            android:name=".RatingResultActivity"
            android:label="Rating Result"
            android:parentActivityName=".RatingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviestore.RatingsActivity" />
        </activity>
        <activity
            android:name=".RatingsActivity"
            android:label="View Ratings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviestore.MainActivity" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="Search details"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviestore.MainActivity" />
        </activity>
        <activity
            android:name=".MovieDetailsActivity"
            android:label="Movie details"
            android:parentActivityName=".EditMoviesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviestore.EditMoviesActivity" />
        </activity>
        <activity
            android:name=".EditMoviesActivity"
            android:label="Favourite Movies"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviestore.MainActivity" />
        </activity>
        <activity
            android:name=".FavouriteActivity"
            android:label="Favourite Movies"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviestore.MainActivity" />
        </activity>
        <activity
            android:name=".DisplayMoviesActivity"
            android:label="All Movies"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviestore.MainActivity" />
        </activity>
        <activity
            android:name=".RegisterMovieActivity"
            android:label="Register Movie"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviestore.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.MovieStore.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>